{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "day1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main/day1",
            "args": [
                "${workspaceFolder}/main/input/day1.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
}