{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "day1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/day-1/test_day1",
            "args": [
                "input"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
}